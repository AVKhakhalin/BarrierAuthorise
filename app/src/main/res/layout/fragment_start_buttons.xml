<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/create_new_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_new_user_text"
        android:textAllCaps="false"
        android:layout_margin="@dimen/create_new_user_margin"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/authorise_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/authorise_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/authorise_user_text"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/create_new_user"
        app:layout_constraintStart_toStartOf="@id/create_new_user"
        app:layout_constraintTop_toBottomOf="@id/create_new_user" />

</androidx.constraintlayout.widget.ConstraintLayout>